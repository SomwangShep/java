<!-- ======================= main content ====================== -->
 <div id="main_content"> 
 </br>

  <% flash.each do |name, msg| %>
    </br></br>
    <%= content_tag(:div, msg, class: "alert") %>
  <% end %> 
  
  <div id="page_wrapper">
    <div id="content">
      <%= yield %>
    </div>
  </div>
  <%= render 'layouts/footer' %>
  
</div><!-- main_content -->
